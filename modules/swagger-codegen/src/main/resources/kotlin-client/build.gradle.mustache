group '{{groupId}}'
version '{{artifactVersion}}'

task wrapper(type: Wrapper) {
    gradleVersion = '5.6.4'
    distributionUrl = "https://services.gradle.org/distributions/gradle-$gradleVersion-all.zip"
}

buildscript {
    ext.kotlin_version = '1.3.50'

    repositories {
		mavenLocal()
		google()
		jcenter()
		mavenCentral()
		maven { url 'https://jitpack.io' }
    }

    dependencies {
        classpath "org.jetbrains.kotlin:kotlin-gradle-plugin:$kotlin_version"
    }
}

apply plugin: 'com.android.library'
apply plugin: 'kotlin-android'
apply plugin: 'kotlin-android-extensions'
apply plugin: 'kotlin-kapt'

dependencies {
	api "org.jetbrains.kotlin:kotlin-stdlib-jdk8:$kotlin_version"
	// api "org.jetbrains.kotlin:kotlin-reflect:$kotlin_version"
	api 'io.swagger:swagger-annotations:1.5.24'
	api 'com.squareup.okhttp3:okhttp:4.2.2'
	api 'com.squareup.okhttp3:logging-interceptor:4.2.2'
	api 'com.squareup.moshi:moshi:1.9.1'
	api 'com.squareup.moshi:moshi-kotlin:1.9.1'
	api 'com.squareup.moshi:moshi-adapters:1.9.1'
	api 'org.threeten:threetenbp:1.4.0'
	kapt('com.squareup.moshi:moshi-kotlin-codegen:1.9.1')
	testImplementation "io.kotlintest:kotlintest:2.0.2"
	testImplementation 'junit:junit:4.12'
}

repositories {
	google()
	jcenter()
	mavenCentral()
	maven { url 'https://jitpack.io' }
}

sourceCompatibility = "1.8"
targetCompatibility = "1.8"
